<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText android:id="@+id/tv_main" />

    <TableRow
        android:id="@+id/tr_1"
        android:gravity="center">

        <Button
            android:id="@+id/btn_1"
            android:layout_margin="5dp"
            android:background="#336699"
            android:text="1"
            android:textColor="#FFFFCC"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_2"
            android:layout_margin="5dp"
            android:background="#336699"
            android:text="2"
            android:textColor="#FFFFCC"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_3"
            android:layout_margin="5dp"
            android:background="#336699"
            android:text="3"
            android:textColor="#FFFFCC"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_2"
        android:gravity="center">

        <Button
            android:id="@+id/btn_4"
            android:layout_margin="5dp"
            android:background="#336699"
            android:text="4"
            android:textColor="#FFFFCC"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_5"
            android:layout_margin="5dp"
            android:background="#336699"
            android:text="5"
            android:textColor="#FFFFCC"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_6"
            android:layout_margin="5dp"
            android:background="#336699"
            android:text="6"
            android:textColor="#FFFFCC"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_3"
        android:gravity="center">

        <Button
            android:id="@+id/btn_7"
            android:layout_margin="5dp"
            android:background="#336699"
            android:text="7"
            android:textColor="#FFFFCC"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_8"
            android:layout_margin="5dp"
            android:background="#336699"
            android:text="8"
            android:textColor="#FFFFCC"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_9"
            android:layout_margin="5dp"
            android:background="#336699"
            android:text="9"
            android:textColor="#FFFFCC"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_4"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cls"
            android:layout_margin="5dp"
            android:background="#336699"
            android:text="清除"
            android:textColor="#FFFFCC"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_0"
            android:layout_margin="5dp"
            android:background="#336699"
            android:text="0"
            android:textColor="#FFFFCC"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_margin="5dp"
            android:background="#336699"
            android:text="確定"
            android:textColor="#FFFFCC"
            android:textSize="18sp" />
    </TableRow>

    <TableRow android:gravity="center">

        <Button
            android:id="@+id/btn_end"
            android:layout_margin="5dp"
            android:background="#336699"
            android:text="結束"
            android:textColor="#ffffcc"
            android:textSize="18sp" />
    </TableRow>

</TableLayout>